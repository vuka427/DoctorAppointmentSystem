<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    <meta name="description" content="Online doctor appointment system">
    <title>Online Doctor Appointment</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/datatable")
    @Styles.Render("~/Content/sweetalert/css")
    @Styles.Render("~/Content/layout/css")
    @Styles.Render("~/Content/fontawesome/css")

</head>
<body>
    <!-- Sidebar -->
    <header class="custom-header" id="custom-header">
        <div class="custom-header-wrapper">
            <button class="navbar-toggler" type="button" aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>
            @Html.Partial("_MenuView")
        </div>
    </header>
    <div class="container-fluid p-0">
        <!-- Header -->
        <div class="main-header ">
            <nav style="height:70px;" class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="main-title-page header-sidebar-off text-center p-0 d-flex justify-content-center w-100">
                    <img class="icon-logo-cusc-header align-items-center" src="~/img/CUSC-Logo-Series.png" alt="Header Img" style="width: 70px; height: 32px" />
                    <span style="color: #F1F1FB; font-weight:800" class="main-header-label  font-weight-bolds align-items-end ">Online Doctor Appointment System</span>
                </div>
            </nav>
        </div>
        <main class="custom-main">

            <!-- Body -->
            @RenderBody()

            <!-- Footer -->
            <footer id="footer">
                <hr />
                <div class="custom-color-gray custom-copyright">
                    &copy2023 Online Doctor Appointment System
                </div>
            </footer>
        </main>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap-lib-js/popper.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datatable")
    @Scripts.Render("~/bundles/sweetalert/js")
    <script src="~/Scripts/js/layout.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
