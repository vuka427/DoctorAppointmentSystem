@{
    Layout = null;
}

@model DoctorAppointmentSystem.Models.Account.Login.LoginViewModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/css/login.css" rel="stylesheet" />
    @Styles.Render("~/Content/sweetalert/css")
</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/img/login-intro-img.png" />
                </div>
                <form id="login-form" class="login100-form validate-form d-flex flex-column justify-content-center">
                    <span class="login100-form-title font-weight-bold">
                        Login Now
                    </span>
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text login-input"><i class="fa fa-user"></i></span>
                        </div>
                        <input id="username" class="form-control" placeholder="Username" type="text" pattern="^[a-zA-Z0-9]+$">
                    </div> <!-- Username -->

                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text login-input"><i class="fa fa-lock"></i></span>
                        </div>
                        <input id="password" class="form-control" placeholder="Password" type="password" pattern="^\S+$">
                    </div> <!-- Password -->

                    <div class="form-group">
                        <button type="submit" id="btn-login-submit" class="btn btn-primary btn-block"> Login </button>
                    </div> <!-- Submit button -->

                    <div class="text-center p-t-12">
                        <span class="txt1">
                            Forgot
                        </span>
                        <a class="txt2" href="#">
                            Password?
                        </a>
                    </div>

                    <div class="text-center p-t-80">
                        <a class="txt2" href="@Url.Action("Register")">
                            Create your Account
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/sweetalert/js")
    <script src="~/Scripts/js/login.js"></script>
</body>
</html>
